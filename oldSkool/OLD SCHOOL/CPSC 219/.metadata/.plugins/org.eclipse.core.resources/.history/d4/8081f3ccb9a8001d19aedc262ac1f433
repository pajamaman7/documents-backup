package basicjava;

public class CCStringsIfAndWhile {
	public static boolean isDigit(char aChar) {
		char[] digits = {'1','2','3','4','5','6','7','8','9','0'};
		for(char digit:digits) {
			if(digit==aChar) {
				return true;
			}
		}
		return false;
	}
	
	public static int count(String str, String chars) {
		if(str==""||chars=="") {
			return 0;
		}
		int matches = 0;
		while (str.contains(chars)){
		    str = str.replaceFirst(chars, "-");
		    matches++;
		}
		return matches;
	}
	
	public static int smallestDigit(int num) {
		int smallest = 9;
		while(num!=0) {
			if(num%10<smallest) {
				smallest = num%10;
			}
			num/=10;
			System.out.println(smallest);
		}
		if (smallest<0) {
			smallest+=10;
		}
		return smallest;
	}
}